<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="371dp"
            android:layout_height="659dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="30dp"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/constraintLayout">
        <TextView
                android:text="Welcome!"
                android:layout_width="330dp"
                android:layout_height="53dp" android:id="@+id/textView18" android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.021"
                app:layout_constraintHorizontal_bias="0.39"/>
        <TextView
                android:text="Hello, please login to access your account"
                android:layout_width="330dp"
                android:layout_height="53dp" android:id="@+id/textView15" android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.143"
                app:layout_constraintHorizontal_bias="0.39"/>
        <TextView
                android:text="Username"
                android:layout_width="330dp"
                android:layout_height="53dp" android:id="@+id/textView19" android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.287"
                app:layout_constraintHorizontal_bias="0.39" android:textColor="#673AB7"/>
        <EditText
                android:layout_width="329dp"
                android:layout_height="63dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextTextPersonName3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.363" app:layout_constraintVertical_bias="0.0"
                android:text="username"/>
        <TextView
                android:text="Password"
                android:layout_width="330dp"
                android:layout_height="53dp" android:id="@+id/textView20" android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.533"
                app:layout_constraintHorizontal_bias="0.39" android:labelFor="@id/editTextTextPassword2"
                android:textColor="#673AB7"/>
        <EditText
                android:layout_width="329dp"
                android:layout_height="51dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextTextPassword2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:text="LOGIN"
                android:layout_width="262dp"
                android:layout_height="66dp" android:id="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.155" android:layout_marginBottom="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>